{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "outDir": "./api",
        "strict": true,
        "moduleResolution": "node",
        "lib": ["es2016", "dom"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noImplicitAny": true
    },
    "include": ["src"],
    "exclude": ["dist", "api", "node_modules"]
}
